{
  "swagger": "2.0",
  "info": {
    "title": "Contact API",
    "description": "Allows you to manage your contacts.",
    "version": "1.0.0"
  },
  "host": "web-backend-ii-2023.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/contacts/all": {
      "get": {
        "description": "Gets all contacts from the database.",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "description": "Gets a contact from the database.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "description": "Deletes a contact from the database.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "description": "Updates a contact in the database.",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "jane"
                },
                "lastName": {
                  "type": "string",
                  "example": "doe"
                },
                "email": {
                  "type": "string",
                  "example": "jdoe@email.com"
                },
                "favoriteColor": {
                  "type": "string",
                  "example": "orange"
                },
                "birthday": {
                  "type": "string",
                  "example": "01/01/1010"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/contacts/new": {
      "post": {
        "description": "Creates a new contact and adds it to the database.",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "john"
                },
                "lastName": {
                  "type": "string",
                  "example": "doe"
                },
                "email": {
                  "type": "string",
                  "example": "jdoe@email.com"
                },
                "favoriteColor": {
                  "type": "string",
                  "example": "blue"
                },
                "birthday": {
                  "type": "string",
                  "example": "12/25/2020"
                }
              },
              "required": [
                "firstName",
                "lastName",
                "email",
                "favoriteColor",
                "birthday"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Created"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  }
}